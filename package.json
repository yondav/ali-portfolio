{
  "name": "ali-portfolio",
  "version": "1.0.0",
  "description": "Problem resolution through visual communication.",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "watch": "nodemon server.js",
    "seed": "node seeders"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yondav/ali-portfolio.git"
  },
  "keywords": [],
  "author": "Yoni David",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yondav/ali-portfolio/issues"
  },
  "homepage": "https://github.com/yondav/ali-portfolio#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.0.6",
    "nodemailer": "^6.6.3"
  },
  "devDependencies": {
    "concurrently": "^6.2.0"
  }
}
